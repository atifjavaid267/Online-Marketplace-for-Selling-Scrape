<%= render 'devise/shared/back' %>
<div class="flex flex-col items-center justify-center">
  <div class="flex flex-col sm:flex-row justify-center items-center sm:items-start sm:justify-start my-20 w-full max-w-2xl">
    <div class="flex flex-col items-start justify-center space-y-8 flex-1">
      <h4 class="font-semibold text-lg">Name:</h4>
      <p class="text-gray-700 mb-6"><%= @ad.product.name %></p>
      <h4 class="font-semibold text-lg">Price:</h4>
      <p class="text-gray-700 mb-6"><%= number_to_currency(@ad.price, unit: "Rs", format: "%u. %n") %></p>
      <h4 class="font-semibold text-lg">Description:</h4>
      <p class="text-gray-700 mb-10"><%= @ad.description %></p>
      <h4 class="font-semibold text-lg">Address:</h4>
      <p class="text-gray-700 mb-10">
        <%= @ad.address.full_address %>
      </p>
    </div>
    <% if @ad.ad_images.attached? %>
      <div class="mt-5">
        <% @ad.ad_images.each do |image| %>
          <%= image_tag image, class: "w-40 h-40" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="pb-5">
    <% if can? :edit, Ad %>
      <%= link_to "Edit Ad", edit_ad_path(@ad), class: "font-semibold bg-blue-500 text-white my-2 px-6 py-2 rounded-lg shadow-md hover:bg-blue-600 transition duration-300 ease-in-out" %>
    <% end %>
    <% if can? :new, Bid %>
      <%= link_to "Bid", new_ad_bid_path(@ad), class: "font-semibold bg-green-500 text-white mb-2 px-10 py-2 rounded-lg shadow-md hover:bg-green-600 transition duration-300 ease-in-out" %>
    <% end %>
    <% if can? :view_bids, Ad %>
      <%= link_to "View Bids", view_bids_ad_path, class: "font-semibold bg-green-500 text-white my-2 px-6 py-2 rounded-lg shadow-md hover:bg-green-600 transition duration-300 ease-in-out" %>
    <% end %>
  </div>
</div>
