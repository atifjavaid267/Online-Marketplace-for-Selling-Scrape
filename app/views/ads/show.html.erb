<%= render 'devise/shared/back' %>
<div class="flex flex-row items-center justify-center">
  <div class="flex flex-row items-start justify-start my-20 w-full max-w-2xl">
    <div class="flex flex-col items-start justify-center space-y-8 flex-1">

      <h4 class="font-semibold text-lg">Name:</h4>
      <p class="text-gray-700 mb-6"><%= @ad.product.name %></p>

      <h4 class="font-semibold text-lg">Price:</h4>
      <p class="text-gray-700 mb-6"><%= @ad.price %></p>

      <h4 class="font-semibold text-lg">Description:</h4>
      <p class="text-gray-700 mb-10"><%= @ad.description %></p>

      <h4 class="font-semibold text-lg">Address:</h4>
      <p class="text-gray-700 mb-10">
        <%= [@ad.address.street1, @ad.address.street2, @ad.address.city, @ad.address.state, @ad.address.zip_code].reject(&:nil?).reject(&:empty?).join(', ') %>
      </p>
      <div>
        <% if can? :edit, Ad %>
          <%= link_to "Edit Ad", edit_ad_path(@ad), class: "font-bold bg-blue-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-600 transition duration-300 ease-in-out", style: "margin: 2px;"%>
        <%end%>
        <% if can? :new, Bid %>
          <%= link_to "Bid", new_ad_bid_path(@ad), class: "font-bold bg-green-500 text-white px-10 py-2 rounded-lg shadow-md hover:bg-green-600 transition duration-300 ease-in-out", style: "margin: 2px;"%>
        <% end %>
        <% if can? :view_bids, Ad %>
          <%= link_to "View Bids", view_bids_ad_path, class: "font-bold bg-green-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-green-600 transition duration-300 ease-in-out", style: "margin: 2px;"%>
        <% end %>
      </div>
    </div>
      <% if @ad.ad_images.attached? %>
        <div>
          <% @ad.ad_images.each do |image| %>
            <%= image_tag image, class:"w-40 h-40"%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
