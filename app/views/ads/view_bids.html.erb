<%= render 'users/navbar' %>


<%if @bids.empty?%>
  <div class="bg-cover bg-no-repeat h-screen" style="background-image: url('https://images.unsplash.com/photo-1475275083424-b4ff81625b60?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1472&q=80');">
    <div class = "pt-5">
      <div class ="bg-gray-800" style="border: 2px; margin: 100px; padding: 40px; border-radius: 10px; color: white; opacity: 0.95;">
        <h1 class="text-center font-bold">No Bid Found!</h1>
      </div>
      <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" style="margin-left: 10px;" onclick="window.history.back();">Back</button>
    </div>
  </div>
<%else%>

  <div class="grid gap-4 md:grid-cols-1 xl:grid-cols-1" style="margin-left: 10px; margin-right: 10px;">
    <br>
    <% @bids.each do |bid| %>

      <% user = User.find_by(id: bid.user_id) %>

      <div class="p-4 border rounded-md shadow-md">
        <p class="text-gray-600 font-bold"> <span class="font-bold"> Bid Amount: </span><%= number_to_currency(bid.price, unit: "Rs.", format: "%u %n") %></p>
        <p class="text-lg">Buyer ID: <%= bid.user_id %></p>
        <p class="text-lg">Buyer Name: <%= user.first_name%></p>
      </div>
    <% end %>
  </div>
  <br>
  <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" style="margin-left: 10px;" onclick="window.history.back();">Back</button>
<%end%>

