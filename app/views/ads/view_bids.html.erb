
<%if @bids.empty?%>
  <%= render partial: 'shared/data_not_found', locals: { message: 'No Bid Found!' } %>
<%else%>
  <br>
  <div id = <%= "bids-container-" + @ad.id.to_s%> class="grid gap-4 md:grid-cols-2 xl:grid-cols-2" style="margin-left: 10px; margin-right: 10px;">
    <% @bids.each do |bid| %>
      <div class="flex justify-between items-center p-4 border rounded-md shadow-md">
        <div>
          <p class="text-gray-600 font-bold"> Bid Amount: <%= number_to_currency(bid.price, unit: "Rs", format: "%u. %n") %></p>
          <p class="text-lg">Buyer Name: <%= "#{bid.user.first_name}" " #{bid.user.last_name}"%></p>
        </div>
        <div>
          <% if can? :new, Order %>
            <%= link_to "Create Order", new_bid_order_path(bid), class: "px-4 py-3 mr-2 bg-green-500 text-white rounded hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <div class = "pb-20 flex flex-row items-center justify-center">
    <%= will_paginate @bids, class:"bg-gray-300 rounded py-3 px-5"%>
  </div>
  <br>
<%end%>
