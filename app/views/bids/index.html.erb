
<% if @bids.empty? %>
  <%= render partial: 'shared/data_not_found', locals: { message: 'No Bid Found!' } %>
<% else %>
  <div class="grid grid-cols-2 gap-4 items-center p-4 border rounded-md shadow-md mt-2">
    <% @bids.each do |bid| %>
      <div class="flex justify-between p-4 border rounded-md shadow-md mt-2">
        <div>
          <p class="text-gray-600 font-bold">Product Name: <%= bid.ad.product.name %></p>
          <p class="text-lg"> Product Price: <%= number_to_currency(bid.ad.price, unit: "Rs", format: "%u. %n") %> </p>
          <p class="text-lg"> Your Bid Amount: </span><%= number_to_currency(bid.price, unit: "Rs", format: "%u. %n") %> </p>
        </div>
        <div class="flex justify-between flex-row text-left">
            <% if bid.status == "pending" %>
                <h3 class="font-bold pr-10 py-6 mx-12 text-blue-600"> Pending</h3>
            <% elsif bid.status == "successful" %>
                <h3 class="font-bold pr-10 py-6 mx-7 text-green-600"> Successful</h3>
            <% elsif bid.status == "failed" %>
                <h3 class="font-bold pr-10 py-6 mx-16 text-red-600"> Failed</h3>
            <%end%>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <div class = "pb-10 flex flex-row items-center justify-center">
    <%= will_paginate @bids, class:"bg-gray-300 rounded py-3 px-5"%>
  </div>
<%end%>
