
<%= render 'users/navbar'%>

<div class="flex flex-row items-center justify-center">
  <div class="flex flex-row items-start justify-start my-20 w-full max-w-2xl">
    <div class="flex flex-col items-start justify-center space-y-8 flex-1">

      <div>
        <br><br><br>
        <%if @order.pending? %>
            <h3 class="font-bold text-blue-600">Order is pending</h3> <br>
            <% if current_user.seller?%>
                <%= button_to "Mark Order Complete", confirm_order_path(@order),  class: "bg-blue-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-600 transition duration-300 ease-in-out"%>
                <br>
                <%= button_to "Cancel Order", cancel_order_path(@order),  class: "bg-red-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-red-600 transition duration-300 ease-in-out"%>
            <%end%>
        <% elsif @order.successful? %>
            <h3 class="font-bold text-green-600">Order has been Completed!</h3>
        <%elsif @order.cancelled?%>
            <h3 class="font-bold text-red-600">Order has been Cancelled!</h3>
        <%end%>
      </div>
      <br>
      <% if current_user.seller? && @order.pending? %>
        <%= link_to "Message buyer", class: "bg-green-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-green-600 transition duration-300 ease-in-out"%>
      <% end %>
      <div class="my-4">
        <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" onclick="window.history.back();">Back</button>
    </div>
    </div>
    <div class="flex flex-col items-start justify-center space-y-8 flex-1">
      <h4 class="font-semibold text-lg">Order Amount:</h4>
      <p class="text-gray-700 mb-6"><%= "Rs. #{@amount}" %></p>
      <%if current_user.seller?%>
        <h4 class="font-semibold text-lg">Buyer Name:</h4>
        <p class="text-gray-700 mb-6"><%= "#{@buyer.first_name} #{@buyer.last_name}" %></p>
      <%elsif current_user.buyer?%>
        <h4 class="font-semibold text-lg">Seller Name:</h4>
        <p class="text-gray-700 mb-6"><%= "#{@seller.first_name} #{@seller.last_name}"%></p>
      <% elsif current_user.admin?%>
        <h4 class="font-semibold text-lg">Buyer Name:</h4>
        <p class="text-gray-700 mb-6"><%= "#{@buyer.first_name} #{@buyer.last_name}" %></p>

        <h4 class="font-semibold text-lg">Seller Name:</h4>
        <p class="text-gray-700 mb-6"><%= "#{@seller.first_name} #{@seller.last_name}"%></p>
      <%end%>
        <h4 class="font-semibold text-lg">Pickup Date & Time:</h4>
        <p class="text-gray-700 mb-6"><%= @order.pickup_time.strftime('%d %B %Y | %I:%M:%S %p')%></p>
        <h4 class="font-semibold text-lg">Address:</h4>
        <p class="text-gray-700 mb-10"><%= "#{@address.street1} #{@address.street2}, #{@address.city}, #{@address.zip_code}" %></p>
    </div>
  </div>
</div>

