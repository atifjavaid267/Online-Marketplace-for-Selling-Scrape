<%if @products.empty? %>
  <div class="bg-cover bg-no-repeat h-screen" style="background-image: url('https://images.unsplash.com/photo-1475275083424-b4ff81625b60?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1472&q=80');">

    <div class = "pt-28">
      <div class ="bg-gray-800" style="border: 2px; margin-top: 100px; margin-bottom:30px; margin-left: 100px; margin-right:100px; padding: 40px; border-radius: 10px; color: white; opacity: 0.95;">
        <h1 class="text-center font-bold">No Product Available!</h1>
      </div>

    </div>
  </div>
<% else %>
  <% if can? :new, Product %>
    <div class="flex justify-end mb-1 mt-2 mr-2">
      <%= link_to "Add Product", new_product_path, class: " text-blue-600 hover:font-semibold mt-2 px-4 rounded"%>
    </div>
  <%end%>
  <div class="grid grid-cols-2 gap-4 m-5">
    <% counter = 1 %>
    <% @products.each do |product| %>
      <div class="border p-4 rounded-lg flex w-full">
        <div class="w-1/2">
          <div>
            <h4 class="font-bold mb-2"><%="Product-#{counter}."%></h4>
            <span class="font-bold">Product Name:</span> <%= product.name %> <br>
          </div>
          <br>
          <div class="flex space-x-4">
            <% if can? :show, Product %>
              <%= link_to "View", product, class: "mt-2 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300 ease-in-out" %>
            <% end %>
            <% if can? :toggle_status, Product %>
              <%= button_to "Unpublish", toggle_status_product_path(product), data: { confirm: "Are you sure to unpublish ad?"}, method: :post, class: "mt-2 bg-gray-500 text-white px-3 py-2 rounded-md hover:bg-gray-600 transition duration-300 ease-in-out" %>
            <% end %>
            <% if can? :destroy, Product %>
              <%= button_to "Delete", product, data: { confirm: "Are you sure to delete ad?", turbo_confirm: "Are you sure to delete ad?" }, method: :delete, class: "mt-2 bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-300 ease-in-out" %>
            <% end %>
          </div>
        </div>
        <div class="flex justify-center w-1/2">
          <div class="flex flex-col justify-center">
          <% if product.product_image.attached? %>
            <%= image_tag product.product_image, class: "w-32 h-28 object-cover rounded-lg shadow-md"%>
          <% end %>
        </div>
        </div>
      </div>

      <% counter += 1 %>
      <% if counter % 2 == 1 %>
        </div><div class="grid grid-cols-2 gap-4 m-5">
      <% end %>

    <% end %>
  </div>
  <div class = "flex flex-row items-center justify-center">
    <%= will_paginate @products, class:"bg-gray-300 rounded py-3 px-5 my-2"%>
  </div>
<% end %>

