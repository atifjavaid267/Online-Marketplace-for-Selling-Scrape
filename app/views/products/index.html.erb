<div>
  <%if @products.empty?%>
  <h4 class = "no_product_found"><%= 'No product ia available!!!'%></h4>
  <% else %>
  <table>
    <thead>
      <tr>
        <th>Product Title</th>
        <th>Product URL</th>
        <th>Product Price</th>
        <th>Product Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product|%>
      <tr>
        <td><%= product.name%></td>
        <td><%= product.description%></td>
        <td><%= link_to "view", product%></td>
        <td><%= link_to "edit", edit_product_path(product)%></td>
        <td><%= button_to "delete", product, method: :delete%></td>
      </tr>
      <%end%>
    </tbody>
  </table>
  <% end %>
</div>

<!-- Create a product -->
<div>
<button>
    <%= link_to "Add Product", new_product_path%>
</button>
</div>
<br>

<div>
    <%= link_to "Back", admin_dashboard_path%>
</div>
