
<%= render 'users/navbar'%>

<div class="flex flex-row items-center justify-center">
  <div class="flex flex-row items-start justify-start my-20 w-full max-w-2xl">
    <div class="flex flex-col items-start justify-center space-y-8 flex-1">
      <h4 class="font-semibold text-lg">Product Name:</h4>
      <p class="text-gray-700 mb-6"><%= @product.name %></p>
      <h4 class="font-semibold text-lg">Product Description:</h4>
      <p class="text-gray-700 mb-10"><%= @product.description %></p>
      <% if current_user.seller? %>
        <%= link_to "Create Ad", new_product_ad_path(@product), class: "bg-green-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-green-600 transition duration-300 ease-in-out"%>
      <% end %>
      <div>
        <%if @product.status %>
          <%= link_to "Back to Products", products_path, class: "bg-blue-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-600 transition duration-300 ease-in-out"%>
        <%else%>
          <%= link_to "Back to Archive Products",  archives_products_path, class: "bg-blue-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-600 transition duration-300 ease-in-out"%>
        <%end%>
      </div>
    </div>
    <div class="w-72 h-40 ml-8">
      <%= image_tag @product.product_image, class: "w-full h-full object-cover rounded-lg shadow-md" %>
    </div>
  </div>
</div>
