<%= render 'devise/shared/back' %>
<div class="flex flex-col items-center justify-center">
  <div class="flex flex-col sm:flex-row items-center sm:items-start justify-center sm:justify-start my-20 w-full max-w-2xl">
    <div class="flex flex-col item-center sm:items-start justify-center space-y-8 flex-1 pb-10">
      <h4 class="font-semibold text-lg">Product Name:</h4>
      <p class="text-gray-700 mb-6"><%= @product.name %></p>
      <h4 class="font-semibold text-lg">Product Description:</h4>
      <p class="text-gray-700 mb-10"><%= @product.description %></p>
    </div>
    <div class="w-72 h-40 ml-8">
      <%= image_tag @product.product_image, class: "w-full h-full object-cover rounded-lg shadow-md" %>
    </div>
  </div>
  <div>
    <% if can? :new, Ad %>
      <%= link_to "Create Ad", new_product_ad_path(@product), class: "font-semibold bg-green-500 text-white px-6 py-3 rounded-lg shadow-md hover:bg-green-600 transition duration-300 ease-in-out" %>
    <% end %>
    <% if can? :edit, Product %>
      <%= link_to "Edit", edit_product_path(@product), class: "font-bold bg-green-500 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded" %>
    <% end %>
  </div>
</div>
