<% if notice %>
  <div id="noticeContainer" class="flex flex-row justify-center bg-green-600">
    <div class="text-black alert alert-info alert-dismissible fade show py-2" role="alert">
      <%= notice %>
      <button id="noticeCloseButton" type="button" class="close bg-black px-1 text-sm text-white rounded-lg"
      data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>

<% if alert %>
  <div id="alertContainer" class="flex flex-row justify-center bg-red-500">
    <div class="text-black alert alert-warning alert-dismissible fade show py-2" role="alert">
      <%= alert %>
      <button id="alertCloseButton" type="button" class="close bg-black px-1 text-sm text-white rounded-lg"
      data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>
