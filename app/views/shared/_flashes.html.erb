<%= javascript_pack_tag "flashes" %>
<% if notice || alert %>
  <div class="flex flex-row justify-center <%= notice ? "bg-green-600" : "bg-red-500" %> pt-2">
    <div class="text-black alert alert-info alert-dismissible fade show py-2" role="alert">
      <%= notice ? notice : alert %>
      <button type="button" class="close bg-black px-1 text-sm text-white rounded-lg" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>
