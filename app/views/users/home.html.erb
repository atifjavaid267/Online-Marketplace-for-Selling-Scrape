<div class="bg-no-repeat min-h-screen bg-cover bg-background_img">
  <div class="flex flex-col justify-center">
    <div class="justify-center mt-32">
      <div class="flex flex-col lg:flex-row md:flex-col sm:flex-col justify-center rounded-lg bg-gray-800 text-white bg-opacity-90 p-10 space-y-5 lg:space-y-0 lg:space-x-5">
        <div class="w-full lg:w-1/4 md:w-full sm:w-full bg-black rounded-lg shadow-lg p-6 pr-16 mt-5 lg:mt-0 mx-2">
          <h2 class="text-xl font-semibold mb-4">PRODUCTS</h2>
          <hr>
          <br>
          <% if can? :index, Product %>
            <%= link_to "View Products", products_path, class: "text-blue-500 hover:text-blue-700" %>
            <br>
            <% if current_user.admin? %>
              <%= link_to "View Archive Products", products_path(status: true), class: "text-blue-500 hover:text-blue-700" %>
            <% end %>
          <% end %>
          <br>
          <% if can? :new, Product %>
            <%= link_to "Add New Product", new_product_path, class: "text-blue-500 hover:text-blue-700" %>
          <% end %>
        </div>
        <div class="w-full lg:w-1/4 md:w-full sm:w-full bg-black rounded-lg shadow-lg p-6 pr-16 mt-5 lg:mt-0 mx-2">
          <h2 class="text-xl font-semibold mb-4">ADS</h2>
          <hr>
          <br>
          <% if can? :index, Ad %>
            <%= link_to "View All Ads", ads_path, class: "text-blue-500 hover:text-blue-700" %>
            <br>
            <% unless current_user.buyer? %>
              <%= link_to "View Archive Ads", ads_path(archived: true), class: "text-blue-500 hover:text-blue-700" %>
            <% end %>
          <% end %>
        </div>
        <div class="w-full lg:w-1/4 md:w-full sm:w-full bg-black rounded-lg shadow-lg p-6 pr-16 mt-5 lg:mt-0 mx-2">
          <h2 class="text-xl font-semibold mb-4">ORDERS</h2>
          <hr>
          <br>
          <% if can? :index, Order %>
            <%= link_to "View All Orders", orders_path, class: "text-blue-500 hover:text-blue-700" %>
            <br>
            <%= link_to "View Pending Orders", orders_path(status: 'pending'), class: "text-blue-500 hover:text-blue-700" %>
            <br>
            <%= link_to "View Successful Orders", orders_path(status: 'successful'), class: "text-blue-500 hover:text-blue-700" %>
            <br>
            <%= link_to "View Cancelled Orders", orders_path(status: 'cancelled'), class: "text-blue-500 hover:text-blue-700" %>
          <% end %>
        </div>
        <% if current_user.seller? %>
          <div class="w-full lg:w-1/4 md:w-full sm:w-full bg-black rounded-lg shadow-lg p-6 pr-16 mt-5 lg:mt-0 mx-2">
            <h2 class="text-xl font-semibold mb-4">ADDRESSES</h2>
            <hr>
            <br>
            <% if can? :index, Address %>
              <%= link_to "View Your Addresses", addresses_path, class: "text-blue-500 hover:text-blue-700" %>
            <% end %>
            <br>
            <% if can? :new, Address %>
              <%= link_to "Add New Address", new_address_path, class: "text-blue-500 hover:text-blue-700" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
