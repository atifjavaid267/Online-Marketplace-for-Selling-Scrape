<div class="bg-cover bg-no-repeat h-screen" style="background-image: url('https://images.unsplash.com/photo-1475275083424-b4ff81625b60?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1472&q=80');">
    <div class = "pt-32 mx-12 flex justify-center items-center">
        <div class="mt-10 p-5 flex flex-col items-center justify-center mx-12 px-5 my-10 w-full h-4/5 max-w-sm bg-white border border-black-200 rounded-lg shadow sm:p-30 md:p-30 dark:bg-gray-800 border-transparent">
            <%if current_user.otp_required_for_login%>
                <h1 class="font-bold my-5">Two Factor Authentication is enabled</h1>
                <div class="my-5">
                    <%= button_to "Disable 2FA", users_otp_toggle_path, data: { confirm: "Are you sure to unpublish product?", turbo_confirm: "Are you sure to unpublish product?" }, method: :patch, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"%>
                </div>
            <%else%>
                <h1 class="font-bold my-5">Two Factor Authentication is disabled</h1>
                <div class="my-5">
                    <%= button_to "Enable 2FA", users_otp_toggle_path, data: { confirm: "Are you sure to unpublish product?", turbo_confirm: "Are you sure to unpublish product?" }, method: :patch, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"%>
                </div>
            <%end%>
        </div>
    </div>
</div>
