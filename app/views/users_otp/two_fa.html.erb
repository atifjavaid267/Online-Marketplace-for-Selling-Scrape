<div class="bg-cover bg-no-repeat h-screen" style="background-image: url('https://images.unsplash.com/photo-1475275083424-b4ff81625b60?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1472&q=80');">
    <%=render 'users/navbar' %>
    <div class = "pt-5 mx-12 mt-20" style="display: flex; justify-content: center; align-items: center;">
    <div class="p-5 flex flex-col items-center justify-center mx-12 px-5 my-10 w-full h-4/5 max-w-sm bg-white border border-black-200 rounded-lg shadow sm:p-30 md:p-30 dark:bg-gray-800 border-transparent">
      <div class="flex flex-col items-center justify-between space-y-5 ">
        <h3 class="font-bold">Two Factor Code</h3>
          <div class="card bg-white p-4 rounded-lg shadow-md">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :post) do |f| %>
              <div class=form-group mb-4">
                <%= f.text_field :otp_attempt, class: "form-control" %>
              </div>
              <br>
              <div class="actions">
                <%= f.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
